<form method="POST" action="/albums/{{album._id}}?_method=patch" class="form-horizontal" >
    <input type="hidden" id="albumId" value={{album._id}}>
    <div class="table-responsive">
        <table id="songTable" class="table-bordered">
        <h2 id="newAlbum">Edit Tracks</h2>
            <thead>
                <th style="width:5%">Track#</th>
                <th style="width:70%">Song Title Name</th>
                <th style="width:20%">Duration</th>
            </thead>
            <tbody>
                {{#each album.songList}}
               <!--      <li class="songList">{{this.trackNumber}} {{this.title}} duration:{{this.duration}}</li> -->
                <tr>
                    <td><input type="text" name="trackNumber" class="form-control" required value="{{this.trackNumber}}"/></td>
                    <td><input type="text" name="title" class="form-control" required value="{{this.title}}"/></td>
                    <td><input type="text" name="duration" class="form-control" required value="{{this.duration}}"/></td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <div class="form-group">
            <div class="text-center">

                <button class="saveBtn" type="button" id="updateTracksBtn">Update Tracks</button>

            </div>
        </div>
    </div>
</form>



